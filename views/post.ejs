<%- include("partials/header.ejs") %>


<body>

    <% if (locals.title && locals.content) { %>

    <div class="container">

        <div class="row post-title">
            <div class="col-8">
                <h1> <%= title %> </h1>
                <p> <%= author %> &nbsp; &nbsp; <%= time %> &#x2022; <%= date %> </p>
            </div>
        </div>

        <div class="row post-content">
            <div class="col-8">
                <p> <%= content %> </p>
            </div>
        </div>
           
    </div>

<% } %>

</body>
