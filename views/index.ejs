<%- include("partials/header.ejs") %>

<div class="container">
    <div class="row featured">
        <div class="col-6 featured">
            <h2 class="featured-title">Probably nothing to worry about</h2>
            <p> <%= homeContent %> </p>
            <img class="profile" src="images/dino-news.jpeg" alt="sf profile">
        </div>
    </div>

    <div class="row line">
        <div class="col-10">
            <h6 class="latestTitle">The Latest</h6>
        </div>
    </div>

    
    <% if (locals.postsArray) { %>
        <% postsArray.forEach(function(post) { %>
            
            <div class="row line">
                <div class="col-10">
                    <hr>
                </div>
            </div>

            <a class="preview-row" href="/posts/<%= post[0] %>">
            <div class="row latest">
                <div class="col-3 previewTitle">
                    <h5> <%= post[0] %> </h5>
                    <p class="preview-author"> <%= post[2] %> </p>
                    <p class="preview-datetime text-muted">  <%= time %> &#x2022; <%= date %> </p>
                </div>
                <div class="col-3 text-muted">
                    <p> <%= post[1].substring(0, 170) + "..." %> 
                        
                    </p>
                    
                </div>
                <div class="col-3 previewImage">
                    <img class="thumbnail" src="images/rex.jpeg" alt="sf profile">
                </div>
            </div>
            </a> 
        <%  }) %>
   <% } %>

</div>



