<%- include("partials/header.ejs") %>

<div class="container">
    <div class="row featured">
        <div class="col-6">
            <h2>Probably nothing to worry about</h2>
            <p> <%= homeContent %> </p>
            <img class="profile" src="images/dino-news.jpeg" alt="sf profile">
            <h6 class="latestTitle">The Latest</h6>
        </div>
    </div>

    <div class="row line">
        <div class="col-10">
            <hr>
        </div>
    </div>

    <div class="row latest">
        <div class="col-3 previewTitle">
            <h5>Rex Actor battled anxiety on set</h5>
        </div>
        <div class="col-3 text-muted">
            <p> <%= previewContent %> </p>
        </div>
        <div class="col-3 previewImage">
            <img class="thumbnail" src="images/rex.jpeg" alt="sf profile">
        </div>
    </div>
    
    <% if (locals.postsArray) { %>
        <% postsArray.forEach(function(post) { %>
            
            <div class="row line">
                <div class="col-10">
                    <hr>
                </div>
            </div>

            <div class="row latest">
                <div class="col-3 previewTitle">
                    <h5> <%= post[0] %> </h5>
                    <p class="preview-author"> <%= post[2] %> </p>
                    <p class="preview-datetime">  <%= time %> &#x2022; <%= date %> </p>
                </div>
                <div class="col-3 text-muted">
                    <p> <%= post[1].substring(0, 170) + "..." %> 
                        <a href="/posts/<%= post[0] %>">Read More</a> 
                    </p>
                    
                </div>
                <div class="col-3 previewImage">
                    <img class="thumbnail" src="images/egg.jpeg" alt="sf profile">
                </div>
            </div>    
        <%  }) %>
   <% } %>

</div>



